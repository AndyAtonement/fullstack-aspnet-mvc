@{
    ViewData["Title"] = "Delete Candidates Control";
}

<div class="text-center mt-5">
    <h3>Are you sure that you want to delete this candidate?</h3>
</div>

<div class="text-center mt-5">
    <a class="btn btn-outline-warning" role="button" asp-controller="Candidates" asp-action="Index">Cancel</a>
<a class="btn btn-outline-danger" role="button" asp-controller="Candidates" asp-action="Delete">Delete</a>
</div>